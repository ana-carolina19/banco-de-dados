/* CRIAR UM NOVO BANCO DE DADOS */
CREATE DATABASE BANCO2604;
 /* SELECIONAR O BANCO A SER USADO*/
 USE BANCO2604;
 /* CRIAR UMA TABELA*/
CREATE TABLE ESTADO
(
	IDESTADO INT NOT NULL PRIMARY KEY,
    NOMEESTADO VARCHAR(40),
    SIGLAESTADO VARCHAR(2)
);
/* ADICIONAR UM ATRIBUTO A TABELA*/
ALTER TABLE ESTADO ADD COLUMN TESTE DOUBLE;
/* REMOVER UM ATRIBUTO NA TABELA*/
ALTER TABLE ESTADO DROP COLUMN TESTE;

/* EXCLUIR UMA TABELA*/
DROP TABLE ESTADO;

/* EXCLUIR UM BANCO DE DADOS*/
DROP DATABASE BANCO2604;
