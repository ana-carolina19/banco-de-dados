CREATE DATABASE LOJA;

USE LOJA;

CREATE TABLE ESTADO
(
	IDESTADO INT NOT NULL PRIMARY KEY, 
    NOMEESTADO VARCHAR(40),
    SIGLAESTADO VARCHAR(2)
);

CREATE TABLE CIDADE
(
	IDCIDADE INT NOT NULL PRIMARY KEY,
    NOMECIDADE VARCHAR(40),
    IDESTADO INT,
    FOREIGN KEY (IDESTADO) REFERENCES ESTADO(IDESTADO)
);

CREATE TABLE CLIENTE
(
	IDCLIENTE INT NOT NULL PRIMARY KEY,
    NOMECLIENTE VARCHAR(40),
    ENDERCLIENTE VARCHAR(40),
    BAIRROCLIENTE VARCHAR(30),
    CPFCLIENTE VARCHAR(20),
    RGCLIENTE VARCHAR(20),
    FONECLIENTE VARCHAR(20),
    IDCIDADE INT,
    FOREIGN KEY (IDCIDADE) REFERENCES CIDADE(IDCIDADE)
);

CREATE TABLE VENDA
(
	IDVENDA INT NOT NULL PRIMARY KEY,
    DATAVENDA VARCHAR (30),
    HORAVENDA VARCHAR (30),
    VALORTOTAL VARCHAR (30),
    IDCLIENTE INT,
    FOREIGN KEY (IDCLIENTE) REFERENCES CLIENTE (IDCLIENTE)
);

CREATE TABLE TIPOPRODUTO
(
	IDTIPO INT NOT NULL PRIMARY KEY,
    DESCTIPO VARCHAR(40)
);

CREATE TABLE PRODUTO 
(
	IDPRODUTO INT NOT NULL PRIMARY KEY,
    DESCPRODUTO VARCHAR (40),
    VALOR VARCHAR (40),
    QTDE VARCHAR (40),
    IDTIPO INT,
    FOREIGN KEY (IDTIPO) REFERENCES TIPOPRODUTO(IDTIPO) 
);
